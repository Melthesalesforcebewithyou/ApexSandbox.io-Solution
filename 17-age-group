public String ageGroup(Integer n) {
    if (n == null) {
        return 'Unknown';
    }
    if (n <= 1) {
        return 'Infant';
    } 
    if (n >= 2 && n <= 14) {
        return 'Child';
    }
    if (n >= 15 && n <= 21) {
        return 'Youth';
    }
    if (n >= 22) {
        return 'Adult';
    }
    return 'Unknown'; 
}